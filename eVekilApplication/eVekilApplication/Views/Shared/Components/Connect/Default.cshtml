@model Connect
<form asp-action="ConnectUs" asp-controller="Home" method="post">
    <div class="row">
        <div class="col-lg-6">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name">Ad</label>
                <input asp-for="Name" type="text" class="form-control" id="Name" required>
            </div>
            <div class="form-group">
                <label asp-for="Surname">Soyad</label>
                <input asp-for="Surname" type="text" class="form-control" id="Name" required>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Phone">Telefon</label>
                <input asp-for="Phone" type="tel" pattern="[0-9]{3}[0-9]{3}[0-9]{2}[0-9]{2}" class="form-control" id="Phone" required>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" id="Email" required>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <label asp-for="Text">Sualınız</label>
                <textarea asp-for="Text" class="form-control" id="Question" rows="4" required></textarea>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <button type="submit" style="background:#8a1919; color:white;" class="btn btn-danger">Göndər</button>
            </div>
        </div>
    </div>
</form>