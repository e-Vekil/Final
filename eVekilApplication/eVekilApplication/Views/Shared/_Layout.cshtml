<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/media.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body style="background-color:rgb(233, 224, 224);">
    <!-- START PRJOECT -->
    <main class="main-page-wrapper">
        <div class="body-wrapper"></div>
        <!-- Start Nav Bar -->
        @if (ViewBag.Title == "Index")
        {
            <nav class="nav-bar-wrapper">
                <header class="header">
                    <div class="icon-burger-wrapper">
                        <span class="icon-burger"></span>
                    </div>
                    <div class="col-lg-10 d-flex logo-brand align-items-center">
                        <p class="m-0"> <a asp-controller="Home" asp-action="Index">E-VEKIL.AZ</a></p>
                        <div class="login-register-wrapper d-flex align-items-center">
                            <a asp-action="Registiration" asp-controller="Account">Login/Register</a>
                        </div>
                        <div class="basket-wrapper d-flex align-items-center">
                            <span href="#" class="basket text-right"><i class="fas fa-shopping-cart"></i></span>
                            <span class="badge badge-dark product-count">0</span>
                        </div>
                        <div class="search-wrapper d-flex align-items-center">
                            <i class="fas fa-search active searchIcon in open-search-box"></i>
                            <i class="fas fa-times searchIcon out"></i>
                            <input class="search" type="text" name="name" value="" placeholder="Search..." />
                        </div>
                    </div>
                </header>
            </nav>
        }
        else
        {
            <nav class="nav-bar-wrapper" style="background-color:#8a1919;">
                <header class="header">
                    <div class="icon-burger-wrapper">
                        <span class="icon-burger"></span>
                    </div>
                    <div class="col-lg-10 d-flex logo-brand align-items-center">
                        <p class="m-0"> <a asp-controller="Home" asp-action="Index">E-VEKIL.AZ</a></p>
                        <div class="login-register-wrapper d-flex align-items-center">
                            <a asp-action="Registiration" asp-controller="Account">Login/Register</a>
                        </div>
                        <div class="basket-wrapper d-flex align-items-center">
                            <span href="#" class="basket text-right"><i class="fas fa-shopping-cart"></i></span>
                            <span class="badge badge-dark product-count">0</span>
                        </div>
                        <div class="search-wrapper d-flex align-items-center">
                            <i class="fas fa-search active searchIcon in open-search-box"></i>
                            <i class="fas fa-times searchIcon out"></i>
                            <input class="search" type="text" name="name" value="" placeholder="Search..." />
                        </div>
                    </div>
                </header>
            </nav>
        }

        <!-- Nav Bar End -->
        <!-- Side Bar -->
        <aside class="side-bar">
            <div class="side-bar-content">
                <ul class="m-0">
                    <li>
                        <span class="close-icon"></span>
                    </li>
                    <li>
                        <a href="#InsanResurslari">Insan Resurslari</a>
                    </li>
                    <li>
                        <a href="#MehkemeSenedleri">Mehkeme Senedleri</a>
                    </li>
                    <li>
                        <a href="#Muqavileler">Müqavilələr</a>
                    </li>
                    <li>
                        <a href="#SairSenedler">Sair Sənədələr</a>
                    </li>
                    <li>
                        <a href="">Results</a>
                    </li>
                    <li>
                        <a href="">About</a>
                    </li>
                    <li>
                        <a href="">Contact</a>
                    </li>
                    <hr>
                    <li>
                        <a href="">Blog</a>
                    </li>
                </ul>
            </div>
        </aside>

        <aside class="side-bar-product-wrapper">
            <div class="side-bar-product">
                <div class="side-bar-product-content">
                    @* Title *@
                    <header class="col-lg-12 d-flex side-bar-title">
                        <h4>SHOPPING CART</h4>
                        <a href="#" class="close-icon-product">Close</a>
                    </header>
                    @*Title End *@
                    @* No Product In The Card *@
                    <div class="no-product col-lg-12"></div>
                    @*  No Product In The Card END *@
                    <div class="ordered-products p-0 col-lg-12">
                        @* Product Information *@
                        <div class="col-lg-12 product-info py-3">
                            <div class="row">
                                <div class="col-lg-3 product-img">
                                    <img src="~/images/bg.jpg" class="w-100" style="height:70px;" alt="Alternate Text" />
                                </div>
                                <div class="col-lg-9 product-desc">
                                    <header>
                                        <a href="#">EINGERLESS GLOVES IN CAMEL</a>
                                    </header>
                                    <div class="col-lg-12 p-0">
                                        <span class="count">1 x <span>180.00 AZN</span></span>
                                    </div>
                                    <i class="fas fa-times"></i>
                                </div>
                            </div>
                        </div>
                        <hr />
                        @*Product Information  End *@

                    </div>
                    @* Ordered Products End *@

                    @* SUBTOTAL *@
                    <div class="col-lg-12 subtotal d-flex">
                        <p>SUBTOTAL:</p>
                        <span class="price">390.00 AZN</span>
                    </div>
                    <hr />
                    @* CheckOut *@
                    <div class="col-lg-12 my-3 checkout">
                        <a href="#">CHECKOUT</a>
                    </div>
                </div>
            </div>
        </aside>
        <nav class="navHelper">
            <a id="navHelperADown" href="#InsanResurslari">
                <span>Scroll Down</span>
                <span id="scrollDown" class="scrollDown"></span>
            </a>
            <a id="navHelperAUp" class="hidden" href="#main2">
                <span>Scroll Up</span>
                <span id="scrollUp" class="scrollUp"></span>
            </a>
        </nav>
        <!-- Side Bar End -->
        @RenderBody()

        <!-- Footer -->
        <footer id="Footer">
            <div class="footer-header">
                <div class="container">
                    <div class="row py-4 align-items-center">
                        <div class="col-md-6 col-lg-5 text-center text-md-left mb-md-0">
                            <h6 class="mb-0">Get connected with us on social networks!</h6>
                        </div>
                        <div class="col-md-6 col-lg-7 text-center text-md-right">
                            <!-- Facebook -->
                            <a class="fb-ic">
                                <i class="fab fa-facebook-f mr-4"> </i>
                            </a>
                            <!--Instagram-->
                            <a class="ins-ic">
                                <i class="fab fa-instagram"> </i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="footer-content">
                 <div class="container text-center text-md-left pt-5">
                     <div class="row">

                         <div class="col-md-3 col-lg-3 mx-auto mb-4">
                             <h6 class="text-uppercase font-weight-bold">İNSAN RESURSLARI</h6>
                             <hr class="mb-4 mt-0 d-inline-block mx-auto"">
                             <p>
                                 <a href="#!">Əmək müqavilələri</a>
                             </p>
                             <p>
                                 <a href="#!">Əmr formaları</a>
                             </p>
                             <p>
                                 <a href="#!">Təlimatlar</a>
                             </p>
                             <p>
                                 <a href="#!">Sair sənədlər</a>
                             </p>
                         </div>
                         <div class="col-md-3 col-lg-3 mx-auto mb-4">
                             <h6 class="text-uppercase font-weight-bold">MÜQAVİLƏLƏR</h6>
                             <hr class="mb-4 mt-0 d-inline-block mx-auto">
                             <p>
                                 <a href="#!">Alğı-satqı müqavilələri</a>
                             </p>
                             <p>
                                 <a href="#!">Podrat / xidmət müqavilələri</a>
                             </p>
                             <p>
                                 <a href="#!">İcarə / kirayə müqavilələri</a>
                             </p>
                             <p>
                                 <a href="#!">Sair müqavilələr</a>
                             </p>
                         </div>
                         <div class="col-md-3 col-lg-3 mx-auto mb-4">
                             <h6 class="text-uppercase font-weight-bold">MƏHKƏMƏ SƏNƏDLƏRİ </h6>
                             <hr class="mb-4 mt-0 d-inline-block mx-auto">
                             <p>
                                 <a href="#!">İddia ərizələri</a>
                             </p>
                             <p>
                                 <a href="#!">Apellyasiya şikayətləri</a>
                             </p>
                             <p>
                                 <a href="#!">Kassasiya şikayətləri</a>
                             </p>
                             <p>
                                 <a href="#!">Vəsatətlər</a>
                             </p>
                             <p>
                                 <a href="#!">Sair sənədlər</a>
                             </p>
                         </div>
                         <div class="col-md-3 col-lg-3 mx-auto mb-md-0 mb-4">
                             <h6 class="text-uppercase font-weight-bold">Contact</h6>
                             <hr class="mb-4 mt-0 d-inline-block mx-auto">
                             <p>
                                 <i class="fa fa-home mr-3"></i> Azerbaijan, Baku, Nasimi
                             </p>
                             <p>
                                 <i class="fa fa-envelope mr-3"></i> e-vekil@hotmail.com
                             </p>
                             <p>
                                 <i class="fa fa-phone mr-3"></i> +994(51) 923 11 44
                             </p>
                             <p>
                                 <i class="fa fa-print mr-3"></i> +994(51) 923 11 44
                             </p>
                         </div>
                     </div>
                 </div>
            </div>

            <div class="footer-footer">
                <!-- Copyright -->
                <div class="footer-copyright text-center py-3">
                    © 2018 Copyright:
                    <a href="e-vekil.az">e-Vekil.az</a>
                </div>
                <!-- Copyright -->
            </div>
        </footer>
        <!-- Footer -->
    </main>

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/js/main.js"></script>
</body>

</html>

