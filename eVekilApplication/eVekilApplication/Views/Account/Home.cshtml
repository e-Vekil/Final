@model User
<section class="account">
    <header class="account-header">
        <div class="container text-center">
            <h1>MƏNİM HESABIM</h1>
        </div>
   </header>

    <div class="account-content">
        <div class="account-content-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <nav class="account-nav">
                            <h3 class="account-nav-title">Mənim Hesabım</h3>
                            <ul class="account-nav-content">
                                <li class="active"><a asp-controller="Account" asp-action="Home">Dashboard</a></li>
                                <li><a asp-controller="Account" asp-action="PurchasedDocuments">Yükləmələr</a></li>
                                <li><a asp-controller="Account" asp-action="Details">İstifadəçi Məlumatları</a></li>
                                <li><a asp-controller="Account" asp-action="Logout">Çıxış</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-md-8">
                        <div class="account-details">
                            <p>
                                Xoş Gəlmisən <strong>@Model.UserName</strong> !@*(Siz <strong>@Model.UserName</strong> deyilsiniz?
                                <a asp-controller="Account" asp-action="Logout">Çıxış</a>)*@
                            </p>
                            <p>
                                Dashboard hissəsindən öz 
                                <a asp-controller="Account" asp-action="PurchasedDocuments">yükləmələrinizə baxa bilər</a> və 
                                <a asp-controller="Account" asp-action="Details">məlumatlarınızı dəyişə bilərsiniz</a>.
                            </p>
                            <div class="account-options">
                                <div class="row m-0">
                                    @*<div class="box account-option account-option-order col-md-6 col-lg-4">
                                        <a href="#">
                                            <span><i class="fas fa-hand-holding-usd"></i>@*<i class="fas fa-box-open"></i></span>
                                            Orders
                                        </a>
                                    </div>*@
                                    <div class="box account-option account-option-order col-md-6 col-lg-4">
                                        <a asp-controller="Account" asp-action="PurchasedDocuments">
                                            <span><i class="fas fa-cloud-download-alt"></i></span>
                                            Yükləmələr
                                        </a>
                                    </div>
                                    <div class="box account-option account-option-order col-md-6 col-lg-4">
                                        <a asp-controller="Account" asp-action="Details">
                                            <span><i class="far fa-user"></i></span>
                                           İstifadəçi məlumatları
                                        </a>
                                    </div>
                                    <div class="box account-option account-option-order col-md-6 col-lg-4">
                                        <a asp-controller="Account" asp-action="Logout">
                                            <span><i class="fas fa-sign-out-alt"></i></span>
                                            Çıxış
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

