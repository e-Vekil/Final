@model List<Comment>
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="row mt-5">
    <!-- column -->
    <div class="col-lg-12" style="overflow:auto;">
        <div class="card">
            <div class="card-block">
                <div class="table-responsive">
                    <table class="table" id="pages">
                        <thead>
                            <tr>
                                <th>
                                    Username or Email
                                </th>
                                <th>
                                    Document
                                </th>
                                <th>
                                    Text
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Accept/Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="id_@item.Id" style="cursor: pointer;">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Document.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text)
                                    </td>
                                    <td>
                                       @if (item.Status)
                                       {
                                        <span class="badge badge-success">Active</span>
                                       }
                                       else
                                       {
                                        <span class="badge badge-danger">Deactive</span>
                                       }
                                    </td>
                                    <td>
                                        @DateTime.Now.ToString("dd.MM.yyyy hh:mm")
                                    </td>
                                    <td>
                                        @if (item.Status)
                                        {
                                            @Html.ActionLink("Unaccept", "Unaccept", new { id = item.Id })
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Accept", "Accept", new { id = item.Id })
                                        }
                                        | @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End PAge Content -->
<!-- ============================================================== -->

<script src="~/js/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
