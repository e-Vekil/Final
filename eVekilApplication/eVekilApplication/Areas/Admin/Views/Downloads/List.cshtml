@model List<PurchasedDocument>
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-7 d-flex justify-content-start my-2 col-4 align-self-center">
        <a asp-action="Add" asp-controller="Documents" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down">ADD DOCUMENT</a>
    </div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Start Page Content -->
<!-- ============================================================== -->
<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div class="table-responsive">
                    <table class="table" id="pages">
                        <thead>
                            <tr>
                                <th>
                                    User
                                </th>
                                <th>
                                    Document
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    IsCompleted
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="id_@item.Id" style="cursor: pointer;">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User.UserName)
                                    </td>
                                    <td>
                                        @item.Document.Name
                                    </td>
                                    <td>
                                        @item.Price
                                    </td>
                                    <td>
                                        @item.Date
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsCompleted)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "PaymentDetails", new { id = item.Id }) |
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ============================================================== -->
<!-- End PAge Content -->
<!-- ============================================================== -->

<script src="~/js/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
<script>

    $(function () {
        //Confirm page deletion
        $("a.delete").click(function () {
            if (!confirm("Confirm page deletion")) return false;
        });

    });

</script>