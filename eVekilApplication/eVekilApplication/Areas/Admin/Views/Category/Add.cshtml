@model Category
<!-- Row -->
<div class="row">
    <div class="col-lg-8 col-xlg-9 col-md-7" style="margin:auto;">
        <div class="card">
            <div class="card-block">
                <form asp-action="Add" asp-controller="Category" method="post" class="form-horizontal form-material">
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="Name" type="text" class="form-control form-control-line">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-12"></label>
                        <div class="col-md-12">
                            <textarea asp-for="Description" class="form-control form-control-line"></textarea>
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Visibilty" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input type="checkbox" asp-for="Visibilty" class="form-control form-control-line" />
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>
<!-- Row -->

<script src="~/js/jquery.min.js"></script>


