@model Subcategory
<!-- Row -->
<div class="row">
    <div class="col-lg-8 col-xlg-9 col-md-7" style="margin:auto;">
        <div class="card">
            <div class="card-block">
                <form asp-action="Edit" asp-controller="SubCategory" method="post" class="form-horizontal form-material">
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="Name" type="text" class="form-control form-control-line" value="@Model.Name">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="col-md-12"></label>
                        <div class="col-md-12">
                            <select asp-for="Category" id="CategoryName" name="CategoryName" class="form-control form-control-line">
                                <option>İnsan Resursları</option>
                            </select>
                            <span asp-validation-for="Category"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>
<!-- Row -->
<script src="~/js/jquery.min.js"></script>
