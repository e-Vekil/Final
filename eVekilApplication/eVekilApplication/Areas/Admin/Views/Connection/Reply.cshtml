@model Connect
<form asp-action="Reply" asp-controller="Connection" asp-route-id="@ViewBag.ReplyId" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" name="Name" class="form-control" value="@Model.Name" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input type="text" asp-for="Surname" name="Surname" class="form-control" value="@Model.Surname" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Name" name="Email" class="form-control" value="@Model.Email" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input type="tel" asp-for="Phone" name="Phone" class="form-control" value="@Model.Phone" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" rows="10" class="form-control" value="@Model.Text" readonly></textarea>
    </div>

    <hr />
    <h4>Reply</h4>
    <textarea id="ReplyText" name="ReplyText" rows="10" required></textarea>
    <button type="submit" class="btn btn-success">Reply</button>
</form>