@model Document
           <!-- Row -->
<div class="row">
    <div class="col-lg-8 col-xlg-9 col-md-7" style="margin:auto;">
        <div class="card">
            <div class="card-block">
                <form asp-action="Edit" asp-controller="Documents" method="post" enctype="multipart/form-data" class="form-horizontal form-material">
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="Name" class="form-control form-control-line" value="@Model.Name">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-12"></label>
                        <div class="col-md-12">
                            <textarea asp-for="Description" class="form-control form-control-line"></textarea>
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="col-md-12"></label>
                        <div class="col-md-12">
                            <textarea asp-for="Price" class="form-control form-control-line"></textarea>
                            <span asp-validation-for="Price"></span>
                        </div>
                    </div>
                  
                    <vc:tags id="@Model.Id"></vc:tags>
                    <div class="form-group">
                        <label class="col-md-12">Advocates</label>
                        <div class="col-md-12">
                            <select name="advocates" id="advocates" asp-for="Advocate" class="form-control form-control-line">
                                <option value="@Model.Advocate.Email">@Model.Advocate.Name</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Subcategory</label>
                        <div class="col-md-12">
                            <select asp-for="Subcategory" name="categories" id="Categories" class="form-control form-control-line">
                                <option value="@Model.Subcategory.Name">@Model.Subcategory.Name</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="File" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input type="file" accept="image/*" asp-for="File" name="File" id="File" class="form-control form-control-line">
                            <img src="#" alt="Image Preview" id="imgpreview" />
                            <span asp-validation-for="File"></span>
                        </div>
                    </div>
                    <input name="DeletedFile" id="DeletedFile" style="opacity:0;" type="text" value="@Model.FileName" class="form-control form-control-line">
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>
<!-- Row -->




<script src="~/js/jquery.min.js"></script>


