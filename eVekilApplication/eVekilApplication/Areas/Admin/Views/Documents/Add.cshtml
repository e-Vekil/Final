@model Document
           <!-- Row -->
<div class="row">

    <div class="col-lg-8 col-xlg-9 col-md-7" style="margin:auto;">
        <div class="card">
            <div class="card-block">
                <form asp-action="Add" asp-controller="Documents" method="post" enctype="multipart/form-data" class="form-horizontal form-material">
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input asp-for="Name" class="form-control form-control-line">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-12"></label>
                        <div class="col-md-12">
                            <textarea asp-for="Description" class="form-control form-control-line"></textarea>
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="TermsOfUse" class="col-md-12"></label>
                        <div class="col-md-12">
                            <textarea asp-for="TermsOfUse" class="form-control form-control-line"></textarea>
                            <span asp-validation-for="TermsOfUse"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Advocates</label>
                        <div class="col-md-12">
                            @*<select name="advocates" class="form-control form-control-line">
                                <option value="@Model.Advocate.Email">@Model.Advocate.Name</option>
                                <option value="nihad@hgn.az">Nihad Eliyev</option>
                            </select>*@
                            <vc:advocates></vc:advocates>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Subcategory</label>
                        <div class="col-md-12">
                            @*<select name="categories" class="form-control form-control-line">
                                <option value="1">Emr</option>
                            </select>*@
                            <vc:subcategories></vc:subcategories>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="File" class="col-md-12"></label>
                        <div class="col-md-12">
                            <input type="file" accept="image/*" asp-for="File" class="form-control form-control-line">
                            <span asp-validation-for="File"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
    <!-- Column -->
</div>
<!-- Row -->




<script src="~/js/jquery.min.js"></script>
